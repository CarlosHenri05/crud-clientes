generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

// Podia colocar a URL no .env ou no próprio docker-compose, mas coloquei diretamente aqui pois os dados do banco já estão no docker-compose.yml
datasource db {
  provider = "mysql"
  url      = "mysql://root:root123@localhost:3306/crud_clientes"
}

model Asset {
  id       Int    @id @default(autoincrement())
  name     String
  value    Float
  clientId Int
  Client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
}

model Client {
  id     Int     @id @default(autoincrement())
  name   String
  email  String  @unique
  status Boolean @default(true)
  assets Asset[]
}
