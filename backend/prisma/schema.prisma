generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Asset {
  id       Int    @id @default(autoincrement())
  name     String
  value    Float
  clientId Int
  Client   Client @relation(fields: [clientId], references: [id])
}

model Client {
  id     Int     @id @default(autoincrement())
  name   String
  email  String  @unique
  status Boolean @default(true)
  assets Asset[]
}
